doctype html
html
  head
    meta(charset='utf-8')
    link(rel='stylesheet', href='/static/assets/css/normalize.css')
    link(rel='stylesheet', href='/static/assets/css/momentpopup.css')
    title Musement Collective
  body
    h2 Basic example; update every 1 ms
    div(id='test') 
    #somedialog.dialog
      .dialog-overlay
      .dialog-content
        h2
          strong Mi Momento
          form(action='/home', method='post' class)
            input(type="text", name="description", placeholder="Describe tu momento")
            .file-upload
                label.upload-label
                    input(type='file', id='attachement', onchange="alertFilename()", name="fileName")
             input(type="hidden", name="totalTime", id="time")
            div
                input.close.btn.btn-close(type="submit", name="submit", value="Guardar Momento")
